<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <LinearLayout
        android:id="@+id/tmp_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip" >

        <include layout="@layout/layout_topbar" />
    </LinearLayout>

    <org.footoo.ting.ui.SlidingLinearLayout
        android:id="@+id/tmp_btm_ctrl"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/layout_bottom_control" />
    </org.footoo.ting.ui.SlidingLinearLayout>

    <org.footoo.ting.ui.SlidingLinearLayout
        android:id="@+id/my_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tmp_btm_ctrl"
        android:layout_below="@id/tmp_top_bar"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/source_cover_large"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="6dip"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_source_cover" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="12dip"
                android:layout_toRightOf="@id/source_cover_large"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/source_desc_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:lines="3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lastmofify_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/source_desc_detail"
                    android:layout_marginTop="8dip"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ViewSwitcher
            android:id="@+id/chapters_switcher"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </org.footoo.ting.ui.SlidingLinearLayout>

</RelativeLayout>